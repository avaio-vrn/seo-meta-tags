<%= content_for :h1, content_tag(:h1, 'SEO: Мета описания страницы', class: config_get(:html, :h1_class)) %>
<%= content_for :admin_javascripts, javascript_include_tag(:init_global) %>
<%= content_for :admin_javascripts, javascript_tag("iconGlobalDataSet('#{json_for_icon_global_data(@metas_list.compact, :id)}');") %>
<%= content_for :admin_javascripts, javascript_include_tag(:admin_template_system) %>
<%= content_for :admin_javascripts, javascript_tag("BackendData.set_sending_data({ac: '#{params[:ac]}',
                                          cnt: '#{params[:cnt]}', id_obj: '#{params[:id_obj]}' })") %>
<%= content_for :admin_javascripts, javascript_include_tag(:templates) %>

<% @metas_list.each_with_index do |meta_tag, index| %>
  <div class='js__main_meta' data-meta-mode='<%= index + 1 %>'>
    <%  unless meta_tag.blank? %>
      <%= render meta_tag %>
      <% end %>
  </div>
<% end %>
<% @metas.meta_tags_plus.each do |tag| %>
  <%= render(meta_tag) unless meta_tag.blank? %>
<% end %>
